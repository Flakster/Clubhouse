<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <% if user_signed_in? %>
        <th>Author</th>
        <th colspan="1"></th>
      <% else %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <% if user_signed_in? %>
          <td><%= post.user.username%>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


