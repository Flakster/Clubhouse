<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <% if user_signed_in?%>
    <strong>Author:</strong>
    <%= @post.user.username %>
  <% end %>
</p>

<% if user_signed_in? && current_user.id == @post.user_id %>
  <%= link_to 'Edit', edit_post_path(@post) %>  |
<% end %>
<%= link_to 'Back', posts_path %>
